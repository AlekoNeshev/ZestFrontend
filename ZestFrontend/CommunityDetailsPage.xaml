<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZestFrontend.CommunityDetailsPage"
             xmlns:viewmodel="clr-namespace:ZestFrontend.ViewModels"
             x:DataType="viewmodel:CommunityDetailsViewModel"
             xmlns:model="clr-namespace:ZestFrontend.DTOs"
             Title="CommunityDetailsPage" >
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}"/>
    </Shell.BackButtonBehavior>
    <ScrollView Orientation="Vertical">
        <VerticalStackLayout Padding="50" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label
            Grid.Row="0"
            Text="{Binding Community.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <Label 
            Grid.Row="1"
            Text="{Binding Community.Description}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <Label 
            Grid.Row="2"
            Text="{Binding Community.Creator}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
                <VerticalStackLayout HorizontalOptions="End">
                    <Button Grid.Column="1" Text="{Binding ButtonText}" HorizontalOptions="End" Command="{Binding ChangeFollowshipStatusCommand}"/>
                    <Button Grid.Column="1" Text="Add" HorizontalOptions="End" Command="{Binding AddPostCommand}"/>
                </VerticalStackLayout>
            </Grid>
            <CollectionView ItemsSource="{Binding Posts}" Grid.Column="1">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:PostDTO">
                        <Grid >
                            <Frame>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding .}"
                      Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CommunityDetailsViewModel}}, Path=GoToPostDetailPageCommand}"/>
                                </Frame.GestureRecognizers>
                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Grid Padding="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="10" />
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"
          Text="{Binding Title}"
          FontAttributes="Bold" 
                  MinimumWidthRequest="100"/>
                                        <Label Grid.Row="1"
          Grid.Column="0"
          Text="{Binding Text}"
          FontAttributes="Italic"
          VerticalOptions="End" 
                  MinimumWidthRequest="100"/>

                                    </Grid>

                                    <ImageButton Source="like.png" HorizontalOptions="Center"  VerticalOptions="Center" WidthRequest="5" HeightRequest="5" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CommunityDetailsViewModel}}, Path=LikePostCommand}" CommandParameter="{Binding .}">
                                    </ImageButton>
                                    <Label Text="{Binding Likes}"/>
                                    <ImageButton Source="dislike.png" HorizontalOptions="Center" VerticalOptions="Center" MaximumWidthRequest="10" MaximumHeightRequest="10" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CommunityDetailsViewModel}}, Path=DislikePostCommand}" CommandParameter="{Binding .}">
                                    </ImageButton>
                                    <Label Text="{Binding Dislikes}"/>
                                    <ImageButton Source="reply.png" HorizontalOptions="Center"  VerticalOptions="Center" MaximumWidthRequest="10" MaximumHeightRequest="10">
                                    </ImageButton>
                                    <ImageButton Source="delete.png" HorizontalOptions="Center"  VerticalOptions="Center" MaximumWidthRequest="10" MaximumHeightRequest="10" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CommunityDetailsViewModel}}, Path=DeletePostCommand}" CommandParameter="{Binding .}">
                                    </ImageButton>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>