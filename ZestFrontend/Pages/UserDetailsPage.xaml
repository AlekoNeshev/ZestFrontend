<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZestFrontend.UserDetailsPage"
             xmlns:viewmodel="clr-namespace:ZestFrontend.ViewModels"
             x:DataType="viewmodel:UserDetailsViewModel"
             xmlns:model="clr-namespace:ZestFrontend.DTOs"
             Title="UserDetailsPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label
          Grid.Row="0"
          Text="{Binding User.Username}"
          VerticalOptions="Center" 
          HorizontalOptions="Center" />
        <Label 
          Grid.Row="1"
          Text="{Binding User.CreatedOn1}"
          VerticalOptions="Center" 
          HorizontalOptions="Center" />

        <VerticalStackLayout HorizontalOptions="End">
            <Button Grid.Column="1" Text="{Binding ButtonText}" HorizontalOptions="End" Command="{Binding ChangeFollowshipStatusCommand}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>