<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ZestFrontend.ViewModels"
             x:DataType="viewmodel:RegisterNewUserViewModel"
             x:Class="ZestFrontend.RegisterNewUser"
             Title="RegisterNewUser">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Account Details" FontSize="Large" HorizontalOptions="Center" />
        <Label Text="First Name:" />
        <Entry Text="{Binding FirstName}" />
        <Label Text="Last Name:" />
        <Entry Text="{Binding LastName}" />
        <Label Text="Username:" />
        <Entry Text="{Binding Username}" />
        <Label Text="Email:" />
        <Entry Text="{Binding Email}" />
        <Label Text="Birthdate:" />
        <DatePicker Date="{Binding Birthdate}" />
        <Label Text="Password" />
        <Entry IsPassword="True" Text="{Binding Password}" />
        <Button Text="Create" Command="{Binding CreateAccountCommand}"/>
    </StackLayout>
</ContentPage>